<html>
    <head>
        <title>
            Store Management System
        </title>
          <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<style>
.fading-hover {
  text-decoration: none !important;
  background-color: rgb(77, 148, 255,0.5);
  transition: all 300ms ease-in-out;
}
.fading-hover:hover {
  background-color: rgb(77, 148, 255,0.9);
}
.no_underline{
  text-decoration: none !important;
}

</style>        
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
{% load static %}
<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script> 
    </head>
    <body class = "dashboard" style="background-image: url(https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);background-size: cover; ">
         <div class="jumbotron text-center bg-dark" style="opacity: 0.8;">
            <h1 class="display-4" style="color: beige; font-weight: bold;">
                Manager Portal
            </h1>
            <button type="button" class="btn btn-outline-info" onclick="window.location.href='http://127.0.0.1/';" style="font-size: 1.3em;">
              Sign Out
         </button>
         </div>
        
         <div class="col-lg-12 col-sm-12 col-md-12">
            <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 0.4em; text-align: center;">
                <a href="./stock-management" class="no_underline">
                <div class="card fading-hover" style="height: 13rem">
                    <div class="card-body">
                        <h1 style="color: white; font-weight:bold;">Stock Management</h1> 
                    </div>
                </div>
              </a>
            </div>

        <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 0.4em; text-align: center;">
            <a href="./employee-management" class="no_underline">
            <div class="card fading-hover " style="height: 13rem">
                <div class="card-body">
                    <h1 style="color: white; font-weight:bold;">Employee Management</h1> 
                </div>
            </div>
          </a>
        </div>

        <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 0.4em; text-align: center;">
            <a href="./wage-calculation" class="no_underline">
            <div class="card fading-hover " style="height: 13rem">
                <div class="card-body">
                    <h1 style="color: white; font-weight:bold;">Wage Calculation</h1> 
                </div>
            </div>
          </a>
        </div>
        <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 0.4em; text-align: center;">
          <a href="./record" class="no_underline">
            <div class="card fading-hover" style="height: 13rem"> 
                <div class="card-body">
                    <h1 style="color: white; font-weight:bold;">Records</h1>
                    <p class="card-text">
                    </p>
                </div>
            </div>
          </a>
        </div>
        <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 0.4em; text-align: center;">
            <a href="./supplier-management" class="no_underline">
            <div class="card fading-hover " style="height: 13rem">
                <div class="card-body">
                    <h1 style="color: white; font-weight:bold;">Supplier Management</h1> 
                </div>
            </div>
          </a>
        </div>
          <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 0.4em; text-align: center;">
              <a href="./finance" class="no_underline">
              <div class="card fading-hover " style="height: 13rem">
                  <div class="card-body">
                      <h1 style="color: white; font-weight:bold;">Finances</h1> 
                  </div>
              </div>
            </a>
          </div>
    </div>     
          {% block content %}
          {% endblock %}
    </body>
</html>
